<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button5"
        android:backgroundTint="#EAD1CE"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView_Laptop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/laptopdemo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_TenLaptop"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="9"
                    android:text="Laptop Dell Gaming G15"
                    android:textColor="#4E352F"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:gravity="end">

                    <ImageButton
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#EAD1CE"
                        android:src="@drawable/delete_icon"
                        app:tint="#4E352F" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageButton
                    android:id="@+id/imageButton_Giam"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:background="#EAD1CE"
                    android:src="@drawable/minus_icon"
                    app:tint="#4E352F" />

                <TextView
                    android:id="@+id/textView_Soluong"
                    android:layout_width="30dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#4E352F"
                    android:textSize="20sp" />

                <ImageButton
                    android:id="@+id/imageButton_Tang"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:background="#EAD1CE"
                    android:src="@drawable/plus_icon"
                    app:tint="#4E352F" />

                <TextView
                    android:id="@+id/textView_GiaTien"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="end"
                    android:text="22.300.000"
                    android:textColor="#4E352F"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
