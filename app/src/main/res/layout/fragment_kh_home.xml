<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2422F"
    tools:context=".FragmentKH.KH_Home_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_TenUser"
                android:layout_marginStart="37dp"
                android:textSize="35sp"
                android:text="Hello User..."
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                android:layout_below="@id/textView_TenUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginStart="35dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape_search_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/imageButton_Search"
                        android:backgroundTint="#FFEFE0"
                        android:src="@drawable/search_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <EditText
                        android:id="@+id/editText_Search"
                        android:textColor="#4E352F"
                        android:hint="@string/search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView_Title"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="30dp"
                    android:textSize="33sp"
                    android:text="NEW IN NOVEMBER"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView_Laptop"
                        android:src="@drawable/img_demo_laptop"
                        android:layout_width="250dp"
                        android:layout_height="250dp"/>

                    <TextView
                        android:id="@+id/textView_TenLaptop"
                        android:textStyle="bold"
                        android:textSize="30sp"
                        android:text="DELL Latitude 9420"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/textView_GiaTien"
                        android:textStyle="bold"
                        android:textSize="27sp"
                        android:text="32.500.000 Ä‘"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_BuyNow"
                        android:layout_marginTop="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="75dp"
                        android:paddingEnd="75dp"
                        android:textSize="25sp"
                        android:textColor="#4E352F"
                        android:text="BUY NOW"
                        android:background="@drawable/shape_button1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>