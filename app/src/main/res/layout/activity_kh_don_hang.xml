<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityKH.KH_DonHang_Activity">

    <include
        android:id="@+id/top"
        layout="@layout/toolbar_hoa_don"/>

    <ScrollView
        android:layout_below="@id/top"
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="#BBA19A"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:padding="7dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Thông tin đơn hàng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shape_text_input_layout"
                        android:padding="10dp">

                        <TextView
                            android:textColor="#4E352F"
                            android:text="06/11/2022"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/img_demo_laptop"
                                android:layout_width="72dp"
                                android:layout_height="72dp"/>

                            <LinearLayout
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="#4E352F"
                                    android:text="Laptop Demo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_alignParentBottom="true"
                                        android:textColor="#4E352F"
                                        android:text="SL: x 1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:textSize="16sp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:textColor="#4E352F"
                                        android:text="22.300.000 VNĐ"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shape_text_input_layout"
                        android:padding="10dp">

                        <TextView
                            android:textColor="#4E352F"
                            android:text="06/11/2022"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/img_demo_laptop"
                                android:layout_width="72dp"
                                android:layout_height="72dp"/>

                            <LinearLayout
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="#4E352F"
                                    android:text="Laptop Demo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_alignParentBottom="true"
                                        android:textColor="#4E352F"
                                        android:text="SL: x 1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:textSize="16sp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:textColor="#4E352F"
                                        android:text="22.300.000 VNĐ"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/shape_text_input_layout"
                        android:padding="10dp">

                        <TextView
                            android:textColor="#4E352F"
                            android:text="06/11/2022"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/img_demo_laptop"
                                android:layout_width="72dp"
                                android:layout_height="72dp"/>

                            <LinearLayout
                                android:padding="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:textColor="#4E352F"
                                    android:text="Laptop Demo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>

                                <RelativeLayout
                                    android:orientation="horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_alignParentBottom="true"
                                        android:textColor="#4E352F"
                                        android:text="SL: x 1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                    <TextView
                                        android:textSize="16sp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentBottom="true"
                                        android:textColor="#4E352F"
                                        android:text="22.300.000 VNĐ"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                                </RelativeLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <RelativeLayout
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_dcnh"
                    android:textColor="@color/black"
                    android:text="@string/a_ch_nh_n_h_ng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Khách Hàng - 0123456789 \n Hà Nội - Việt Nam"
                    android:textColor="#4E352F"
                    android:layout_below="@id/tv_dcnh"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_alignParentEnd="true"
                    android:textColor="#3852B0"
                    android:text="@string/thay_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_httt"
                    android:textColor="@color/black"
                    android:text="@string/h_nh_th_c_thanh_to_n"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Thanh toán khi nhận hàng"
                    android:textColor="#4E352F"
                    android:layout_below="@id/tv_httt"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_alignParentEnd="true"
                    android:textColor="#3852B0"
                    android:text="@string/thay_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_vou"
                    android:textColor="@color/black"
                    android:text="@string/voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:text="HALOW2022 \n Sale off 20%"
                    android:textColor="#4E352F"
                    android:layout_below="@id/tv_vou"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_alignParentEnd="true"
                    android:textColor="#3852B0"
                    android:text="@string/thay_i"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/hoa_don_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"/>

                    <TextView
                        android:gravity="center_vertical"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="@string/chi_ti_t_n_h_ng"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingStart="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/t_ng_ti_n_h_ng"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:gravity="end"
                        android:text="30.000đ"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingStart="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="@string/voucher_gi_m_gi"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:gravity="end"
                        android:text="0.000đ"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:paddingStart="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="19sp"
                        android:text="@string/t_ng_thanh_to_n"
                        android:layout_weight="7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:textColor="#F00000"
                        android:textSize="19sp"
                        android:gravity="end"
                        android:text="30.000đ"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:padding="7dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/dieu_khoan_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:text="Nhấn “đặt hàng” đồng nghĩa với việc bạn đồng ý tuân thủ  theo điều khoản FPT shop "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:paddingEnd="10dp"
        android:id="@+id/bottom"
        android:gravity="end"
        android:orientation="horizontal"
        android:background="@drawable/shape_text_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="@string/t_ng_thanh_to_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="end"
                android:textColor="#F00000"
                android:textSize="19sp"
                android:text="30.000đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Button
            android:layout_marginStart="15dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:backgroundTint="#D2422F"
            android:text="@string/t_h_ng"
            android:layout_width="128dp"
            android:layout_height="64dp"/>

    </LinearLayout>

</RelativeLayout>