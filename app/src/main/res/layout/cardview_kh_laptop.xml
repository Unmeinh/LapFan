<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:background="@drawable/shape_button5"
        android:backgroundTint="#FFEFE0"
        android:gravity="center"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/imageView_Laptop"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:src="@drawable/laptopdemo"/>

        <TextView
            android:id="@+id/textView_TenLaptop"
            android:gravity="center"
            android:text="Laptop Acer Nitro 5 Gaming AN515 45 R6EV R5 5600H"
            android:padding="5dp"
            android:textColor="#422D29"
            android:textSize="11sp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_width="match_parent"
            android:layout_height="39dp"/>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_Ram"
                android:layout_marginEnd="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:textColor="#4E352F"
                android:background="@drawable/shape_square"
                android:text="RAM 4GB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start_img" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start_img" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start_img" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start_img" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/start_img" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <TextView
                android:gravity="center_vertical"
                android:id="@+id/textView_GiaTien"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="match_parent"
                android:text="22.300.000 VNÄ"
                android:textColor="#4E352F"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView_Them_GioHang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/gio_hang_navi_icon" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>