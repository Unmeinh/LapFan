<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_button5"
    android:backgroundTint="#FFEFE0">

    <LinearLayout
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_Laptop"
            android:layout_width="136dp"
            android:layout_height="136dp"
            android:src="@drawable/laptopdemo"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <TextView
                android:id="@+id/textView_GiaTien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="22.300.000 VNĐ"
                android:textColor="#4E352F"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/imageView_Them_GioHang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:src="@drawable/gio_hang_navi_icon" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>