<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FFEFE0"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView_TenKH"
            android:textColor="#4E352F"
            android:text="Khách hàng A"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_TenLaptop"
            android:textColor="#4E352F"
            android:text="Laptop MacBook Pro 14 M1 Pro 2021 8-core CPU"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_SDT"
            android:textColor="#4E352F"
            android:text="0123456789"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_Soluong"
            android:textColor="#F0270C"
            android:text="43.190.000đ"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textView_Date"
            android:gravity="end"
            android:layout_marginTop="15dp"
            android:textColor="#4E352F"
            android:text="15/11/2022"
            android:textSize="19sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>