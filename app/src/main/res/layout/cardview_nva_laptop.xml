<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_button5"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <ImageView
            android:id="@+id/imageView_Laptop"
            android:layout_width="185dp"
            android:layout_height="190dp"
            android:src="@drawable/laptopdemo" />

        <TextView
            android:id="@+id/textView_TenLaptop"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Laptop Acer Nitro 5 Gaming AN515 45 R6EV R5 5600H"
            android:textColor="#422D29"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/sold_icon" />

            <LinearLayout
                android:paddingTop="5dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã bán: "
                    android:textColor="#F20C0C" />

                <TextView
                    android:id="@+id/textView_Soluong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19"
                    android:textColor="#F20C0C" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView_GiaTien"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:text="21.990.000 VNĐ"
                android:textColor="#F20C0C"
                android:textSize="18sp" />

            <ImageButton
                android:id="@+id/imageButton_Delete"
                android:src="@drawable/garbage_can_icon"
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/imageView_HangLaptop"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/img_macbook"
        android:layout_width="35dp"
        android:layout_height="35dp"/>

</RelativeLayout>