<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2422F"
    android:orientation="vertical"
    tools:context=".ActivityKH.InfoLaptopActivity">

    <include android:id="@+id/top"
        layout="@layout/toolbar_navi_kh"/>

    <ScrollView
        android:layout_above="@id/bottom"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/laptopdemo"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="350dp"/>

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Laptop Dell Gaming G15"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="Giá tiền: 22.300.000 VNĐ"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="20dp"
                android:text="Đánh giá: 5/5"
                android:textSize="20sp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textSize="18sp"
                android:text="Thông số kĩ thuật: \n - 15.6 inch, 1920 x 1080 Pixels, IPS, 144 Hz, 300 nits, Anti-glare LED-backlit \n - Intel, Core i5, 11400H \n - 16 GB (2 thanh 8 GB), DDR4, 3200 MHz \n - SSD 512 GB \n - NVIDIA GeForce RTX 3050 4GB; Intel UHD Graphics"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:background="#D2422F"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="20dp"
                android:layout_gravity="end"
                android:background="@drawable/shape_button5"
                android:textColor="#4E352F"
                android:textSize="12sp"
                android:text="@string/ch_n_mua"
                android:layout_width="120dp"
                android:layout_height="60dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_margin="20dp"
                android:layout_gravity="end"
                android:background="@drawable/shape_button5"
                android:textColor="#4E352F"
                android:textSize="12sp"
                android:text="@string/th_m_v_o_gi_h_ng"
                android:layout_width="170dp"
                android:layout_height="60dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>