<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2422F"
    android:orientation="vertical"
    tools:context=".ActivityKH.Info_Laptop_Activity">

    <include android:id="@+id/top"
        layout="@layout/toolbar_navi_kh"/>

    <ScrollView
        android:layout_above="@id/bottom"
        android:layout_below="@id/top"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/laptopdemo"
                android:id="@+id/imageView_Laptop"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="350dp"/>

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="center"
                    android:id="@+id/textView_TenLaptop"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="21sp"
                    android:text="Laptop Acer Nitro 5 Gaming AN515 45 R6EV R5 5600H"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:gravity="center"
                    android:id="@+id/textView_GiaTien"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:text="Giá tiền: 22.300.000 VNĐ"
                    android:textColor="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Đánh giá: "
                        android:textSize="20sp"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/start_img" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/start_img" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/start_img" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/start_img" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/start_img" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_TSKT"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:background="@drawable/shape_button5"
                android:lineSpacingExtra="5dp"
                android:textSize="18sp"
                android:text="@string/tskt_ram_8g"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:background="#D2422F"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_Mua"
                android:layout_margin="20dp"
                android:layout_gravity="end"
                android:background="@drawable/shape_button5"
                android:textColor="#4E352F"
                android:textSize="12sp"
                android:text="@string/ch_n_mua"
                android:layout_width="120dp"
                android:layout_height="60dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_Add_To_GioHang"
                android:layout_margin="20dp"
                android:layout_gravity="end"
                android:background="@drawable/shape_button5"
                android:textColor="#4E352F"
                android:textSize="12sp"
                android:text="@string/th_m_v_o_gi_h_ng"
                android:layout_width="170dp"
                android:layout_height="60dp"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>